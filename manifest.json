{
  "name": "bp/",
  "version": "1.2.3",
  "description": "Shortlinks for Blueprint",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "webNavigation",
    "tabs",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback"
  ],
  "chrome_settings_overrides": {
    "search_provider": {
      "name": "bp/",
      "keyword": "bp/",
      "favicon_url": "https://calblueprint.org/assets/logo.png",
      "search_url": "https://go.calblueprint.org/?q={searchTerms}",
      "suggest_url": "https://go.calblueprint.org/__bpslash__/suggest?q={searchTerms}",
      "encoding": "UTF-8",
      "is_default": false
    }
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "redirect",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
